# Google Cloud Platform Configuration
# govreposcrape - Vertex AI Search via Cloud Storage Backend

# Google Cloud Project (Required)
GOOGLE_PROJECT_ID=your_project_id_here
GOOGLE_PROJECT_NUMBER=your_project_number_here
GOOGLE_PROJECT_NAME=your_project_name_here

# Cloud Storage Bucket (Required for Vertex AI Search backend)
# Default: govreposcrape-summaries
GCS_BUCKET_NAME=govreposcrape-summaries

# Service Account Credentials Path (Required for container authentication)
# Path to your google-credentials.json file
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# Vertex AI Search Engine ID (Required for API search queries)
# Format: projects/{project}/locations/{location}/collections/{collection}/engines/{engine}
VERTEX_AI_SEARCH_ENGINE_ID=projects/YOUR_PROJECT_NUMBER/locations/global/collections/default_collection/engines/govreposcrape-search

# Cloud Run Configuration (For API deployment)
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=govreposcrape-api

# Repos.json Feed URL
REPOS_JSON_URL=https://raw.githubusercontent.com/uk-x-gov-software-community/xgov-opensource-repo-scraper/refs/heads/main/repos.json
